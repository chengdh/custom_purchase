<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="purchase_order_form">
      <field name="name">purchase.order.form.inherited</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">
        <header position="replace">
          <header>
            <!--
            <button name="wkf_send_rfq" states="draft" string="Send by Email" type="object" context="{'send_rfq':True}" class="oe_highlight"/>
            <button name="wkf_send_rfq" states="sent" string="Send by Email" type="object" context="{'send_rfq':True}"/>
            -->
            <button name="print_quotation" string="Print" type="object" states="draft" class="oe_highlight" groups="base.group_user"/>
            <button name="print_quotation" string="Print" type="object" states="sent" groups="base.group_user"/>

            <button name="sub_1" states="draft" string="工程采购" />
            <button name="sub_2" states="draft" string="技术采购" />


            <button name="stock_manager_approve_project" states="subed_1" string="库管审批" groups="stock.group_stock_manager" />
            <button name="support_manager_approve" states="project_stock_manager_approved" string="保障经理审批" groups="custom_purchase.group_support_manager" />
            <button name="houqin_manager_approve" states="support_manager_approved" string="后勤主管审批" groups="custom_purchase.group_houqin_manager" />


            <button name="stock_manager_approve_it" states="subed_2" string="库管审批"  groups="stock.group_stock_manager" />
            <button name="it_manager_approve" states="it_stock_manager_approved" string="经理审批" groups="custom_purchase.group_it_manager" />

            <button name="purchase_confirm" states="it_manager_approved,houqin_manager_approved" string="Confirm Order" groups="custom_purchase.group_it_manager,custom_purchase.group_houqin_manager" />
            <!--
            <button name="purchase_confirm" states="sent" string="Confirm Order" class="oe_highlight"/>
            <button name="wkf_send_rfq" states="confirmed" string="Resend Purchase Order" type="object" class="oe_highlight"/>
            -->
            <button name="action_cancel" states="approved,except_picking,except_invoice" string="Cancel Order" type="object" />
            <button name="picking_ok" states="except_picking" string="Manually Corrected"/>
            <button name="invoice_ok" states="except_invoice" string="Manually Corrected"/>
            <button name="purchase_approve" states="confirmed" string="Approve Order" class="oe_highlight" groups="purchase.group_purchase_manager"/>
            <button name="view_picking" string="Receive Products" type="object" attrs="{'invisible': ['|', ('shipped','=',True), ('state','!=', 'approved')]}" class="oe_highlight"/>
            <button name="view_invoice" string="Receive Invoice" type="object" attrs="{'invisible': ['|', ('invoice_method','in', ['picking', 'manual']), '|', ('state','!=', 'approved'), ('invoiced','=',True) ]}" class="oe_highlight"/>
            <button name="action_cancel_draft" states="cancel,sent,confirmed" string="Set to Draft" type="object" />
            <button name="purchase_cancel" states="draft,confirmed,sent" string="Cancel Order"/>
            <field name="state" widget="statusbar" statusbar_visible="draft,subed_1,subed_2,project_stock_manager_approved,it_stock_manager_approved,it_manager_approved,support_manager_approved,houqin_manager_approved,sent,approved,done" statusbar_colors='{"except_picking":"red","except_invoice":"red","confirmed":"blue"}' readonly="1"/>
          </header>
        </header>
      </field>
    </record>
  </data>
</openerp>

